<style>
  .footer .phone{
    display: {{ "footer_phone_number_show" | customizable : customization.footer_phone_number_show, preview }};
  }
  .footer .mail{
    display: {{ "footer_email_show" | customizable : customization.footer_email_show, preview }};
  }
  .footer .facebook-btn{
    display: {{ "footer_facebook_show" | customizable : customization.footer_facebook_show, preview }};
  }
  .footer .twitter-btn{
    display: {{ "footer_twitter_show" | customizable : customization.footer_twitter_show, preview }};
  }
  .footer .instagram-btn{
    display: {{ "footer_instagram_show" | customizable : customization.footer_instagram_show, preview }};
